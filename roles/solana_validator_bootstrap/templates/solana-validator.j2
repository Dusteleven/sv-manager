# /etc/default/solana-validator
#
# Environment file for solana validator systemd unit files.
#

SOLANA_VALIDATOR_EXTRA_ARGS="--identity {{ secrets_path }}/validator-keypair.json \
--only-known-rpc \
{% if not rpc_node %}
--vote-account {{ secrets_path }}/vote-account-keypair.json \
{% endif %}
--rpc-port {{ solana_rpc_port }} \
--gossip-port {{ solana_gossip_port }} \
--full-rpc-api \
{% if not extra_params is none %}
{% for extra_var in extra_params %}
{{ extra_var }} \
{% endfor %}
{% endif %}
{% for entrypoint in entrypoints %}
--entrypoint {{ entrypoint }} \
{% endfor %}
{% for known_validator in known_validators %}
--known-validator {{ known_validator }} \
{% endfor %}
{% if 'mainnet_validators' in group_names and not rpc_node %}
--private-rpc \
--rpc-bind-address 127.0.0.1 \
--wal-recovery-mode skip_any_corrupted_record \
--snapshot-compression none \
{% endif %}
{% if rpc_node %}
--no-voting \
--account-index program-id \
--no-duplicate-instance-check \
--enable-rpc-transaction-history \
{% if index_excluded_keys is defined %}
{% for key in index_excluded_keys %}
--account-index-exclude-key {{ key }} \
{% endfor %}
{% endif %}
--accounts-index-memory-limit-mb 350 \
{% endif %}
--incremental-snapshot-interval-slots 250 \
--no-port-check \
--limit-ledger-size {{ limit_ledger_size }} \
--log {{ validator_log_path }}/solana-validator.log \
--ledger {{ ledger_path }} \
--accounts {{ accounts_path }} \
--snapshots {{ snapshots_path }} \
--tpu-use-quic \
--dynamic-port-range {{ open_solana_ports_start }}-{{ open_solana_ports_end }}"